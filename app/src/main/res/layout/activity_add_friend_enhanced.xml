<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/background_primary"
        android:gravity="center"
        tools:context=".AddFriendActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp"
            android:background="@drawable/status_card_background"
            android:padding="16dp">

        <ImageView
                android:id="@+id/captureIndicator"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_person"
                android:layout_marginEnd="12dp"
                android:contentDescription="Capture status indicator"
                app:tint="@color/accent_primary"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/statusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/waiting_for_name"
                    android:textSize="22sp"
                    android:textColor="@color/accent_primary"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

            <TextView
                    android:id="@+id/progressText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 / 5 photos captured"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:visibility="gone"
                    android:layout_marginTop="4dp" />
        </LinearLayout>
        <ImageView
                android:id="@+id/qualityIndicator"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_quality_unknown"
                android:layout_marginStart="8dp"
                android:contentDescription="Image quality indicator"
                android:visibility="gone"
                app:tint="@color/accent_secondary"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/name_display_background"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/registering_person"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

        <TextView
                android:id="@+id/nameDisplayText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: Not set"
                android:textSize="28sp"
                android:textColor="@color/accent_secondary"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:contentDescription="Person name display"
                android:visibility="gone" />
    </LinearLayout>

    <TextView
            android:id="@+id/instructionsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Say the person's name to begin registration"
            android:textSize="18sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/instruction_background"
            android:layout_marginBottom="24dp"
            android:contentDescription="Instructions" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/capture_area_background"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

        <ImageView
                android:id="@+id/liveFeedPreview"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_camera_preview"
                android:background="@drawable/preview_frame"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp"
                android:contentDescription="Live camera preview"
                android:alpha="0.7" />

        <ProgressBar
                android:id="@+id/captureProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginBottom="16dp"
                android:progressTint="@color/accent_primary"
                android:progressBackgroundTint="@color/background_secondary"
                android:max="5"
                android:progress="0"
                android:visibility="gone" />

        <LinearLayout
                android:id="@+id/qualityFeedbackArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone">

            <ImageView
                    android:id="@+id/qualityIcon1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_quality_dot_empty"
                    android:layout_margin="4dp"
                    app:tint="@color/text_secondary"/>

            <ImageView
                    android:id="@+id/qualityIcon2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_quality_dot_empty"
                    android:layout_margin="4dp"
                    app:tint="@color/text_secondary"/>

            <ImageView
                    android:id="@+id/qualityIcon3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_quality_dot_empty"
                    android:layout_margin="4dp"
                    app:tint="@color/text_secondary"/>

            <ImageView
                    android:id="@+id/qualityIcon4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_quality_dot_empty"
                    android:layout_margin="4dp"
                    app:tint="@color/text_secondary"/>

            <ImageView
                    android:id="@+id/qualityIcon5"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_quality_dot_empty"
                    android:layout_margin="4dp"
                    app:tint="@color/text_secondary"/>
        </LinearLayout>

        <TextView
                android:id="@+id/captureStatusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ready to begin"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:layout_marginTop="12dp" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

        <Button
                android:id="@+id/btnCancel"
                style="@style/DangerActionButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:drawableStart="@drawable/ic_close"
                android:contentDescription="@string/cancel_desc"
                android:layout_marginEnd="8dp" />

        <Button
                android:id="@+id/btnStartOver"
                style="@style/SecondaryActionButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/start_over"
                android:drawableStart="@drawable/ic_refresh"
                android:contentDescription="@string/start_over_desc"
                android:layout_marginStart="8dp"
                android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/connectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/connection_status_background"
            android:padding="12dp">

        <ImageView
                android:id="@+id/connectionIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_bluetooth_connected"
                android:layout_marginEnd="8dp"
                android:contentDescription="Connection status"
                app:tint="@color/success_color"/>

        <TextView
                android:id="@+id/connectionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart glasses connected"
                android:textSize="14sp"
                android:textColor="@color/success_color"
                android:fontFamily="sans-serif" />
    </LinearLayout>

</LinearLayout>