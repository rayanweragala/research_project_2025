<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#121212"
        android:gravity="center"
        tools:context=".PeopleRecognitionActivity">

    <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to recognize"
            android:textSize="24sp"
            android:textColor="#4CAF50"
            android:gravity="center"
            android:padding="16dp"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/resultsText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="No results yet"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="16dp"
            android:background="#1E1E1E"
            android:textStyle="bold"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

        <Button
                android:id="@+id/btnStartRecognition"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:text="START"
                android:textSize="20sp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:contentDescription="Start recognition button"/>

        <Button
                android:id="@+id/btnStopRecognition"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:text="STOP"
                android:textSize="20sp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:contentDescription="Stop recognition button"/>
    </LinearLayout>

    <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="BACK"
            android:textSize="18sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:contentDescription="Back button"
            android:hapticFeedbackEnabled="true"/>
</LinearLayout>