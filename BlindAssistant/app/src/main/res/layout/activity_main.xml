<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#121212"
              android:padding="24dp"
              android:gravity="center"
              tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blind Assistant"
            android:textColor="#4CAF50"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="48dp"
            android:contentDescription="Blind Assistant App"/>

    <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to assist"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="16dp"
            android:background="#1E1E1E"
            android:layout_marginBottom="24dp"/>

    <Button
            android:id="@+id/btnPeopleRecognition"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="People Recognition"
            android:textSize="24sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:drawableTop="@drawable/ic_face_24dp"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="Start people recognition"
            style="@style/FeatureButton"/>

    <Button
            android:id="@+id/btnVoiceCommand"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Voice Assistant"
            android:textSize="24sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:drawableTop="@drawable/ic_mic_24dp"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="Activate voice commands"
            style="@style/FeatureButton"/>

    <Button
            android:id="@+id/btnNavigation"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Navigation"
            android:textSize="20sp"
            android:backgroundTint="#9C27B0"
            android:textColor="#FFFFFF"
            android:drawableStart="@drawable/ic_navigation_24dp"
            android:drawablePadding="16dp"
            android:gravity="start|center_vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Navigation assistance"/>

    <Button
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Settings"
            android:textSize="20sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:drawableStart="@drawable/ic_settings_24dp"
            android:drawablePadding="16dp"
            android:gravity="start|center_vertical"
            android:padding="16dp"
            android:contentDescription="App settings"/>
</LinearLayout>