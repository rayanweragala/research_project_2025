<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent_primary</item>
        <item name="colorPrimaryDark">@color/background_primary</item>
        <item name="colorAccent">@color/accent_secondary</item>
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:navigationBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.HighContrast" parent="AppTheme">
        <item name="android:windowBackground">@color/high_contrast_background</item>
        <item name="android:statusBarColor">@color/high_contrast_background</item>
        <item name="android:navigationBarColor">@color/high_contrast_background</item>
        <item name="colorPrimary">@color/high_contrast_accent</item>
        <item name="colorAccent">@color/high_contrast_accent</item>
    </style>

    <style name="BaseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@animator/button_elevation</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="PrimaryFeatureButton" parent="BaseButton">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@drawable/button_primary_selector</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableTint">@color/text_primary</item>
    </style>

    <style name="SecondaryFeatureButton" parent="BaseButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@drawable/button_secondary_selector</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawableTint">@color/text_primary</item>
    </style>

    <style name="PrimaryActionButton" parent="BaseButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@drawable/button_action_primary_selector</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableTint">@color/text_primary</item>
    </style>

    <style name="SecondaryActionButton" parent="BaseButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@drawable/button_action_secondary_selector</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawableTint">@color/text_primary</item>
    </style>

    <style name="TertiaryActionButton" parent="BaseButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@drawable/button_action_tertiary_selector</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawableTint">@color/text_primary</item>
    </style>

    <style name="DangerActionButton" parent="BaseButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@drawable/button_danger_selector</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawableTint">@color/text_primary</item>
    </style>

    <style name="SuccessActionButton" parent="BaseButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@drawable/button_success_selector</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawableTint">@color/text_primary</item>
    </style>

    <style name="ProgressDot">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/progress_dot_selector</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/accent_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SubHeaderText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="CaptionText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="SecondaryButton" parent="BaseButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@drawable/button_secondary_selector</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawableTint">@color/text_primary</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>