<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp"
              android:background="@color/background_color"
              tools:context=".EnhancedFaceRecognitionActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@color/header_background">

        <ImageView
                android:id="@+id/statusIndicator"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_visibility_off"
                android:contentDescription="Smart glasses connection status" />

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/statusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connecting to Smart Glasses..."
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:contentDescription="Current status" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📱 Mobile Interface for Smart Glasses"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="2dp" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@color/camera_background">

        <ImageView
                android:id="@+id/cameraFeedView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Smart glasses camera feed"
                android:background="#f0f0f0" />

        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/smart_glasses_overlay_border" />

        <LinearLayout
                android:id="@+id/noFeedMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="visible">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👓"
                    android:textSize="48sp"
                    android:alpha="0.3" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connecting to\nSmart Glasses Camera"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:textAlignment="center"
                    android:alpha="0.7"
                    android:layout_marginTop="8dp" />

        </LinearLayout>

    </FrameLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="8dp"
            android:background="@color/results_background"
            android:padding="8dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔍 Recognition Results"
                        android:textSize="12sp"
                        android:textColor="@color/accent_text"
                        android:textStyle="bold" />

            </LinearLayout>

            <TextView
                    android:id="@+id/resultsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Press start to begin smart glasses recognition"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:contentDescription="Recognition results"
                    android:layout_marginBottom="8dp" />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"
                    android:layout_marginVertical="4dp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📊 Performance Metrics"
                    android:textSize="11sp"
                    android:textColor="@color/accent_text"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp" />

            <TextView
                    android:id="@+id/performanceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📊 Frames: 0 | Faces: 0 (0%) | Recognized: 0 (0%)"
                    android:textSize="11sp"
                    android:textColor="@color/performance_text"
                    android:fontFamily="monospace"
                    android:contentDescription="Performance statistics" />

        </LinearLayout>

    </ScrollView>

    <TextView
            android:id="@+id/instructionsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="12dp"
            android:text="Connecting to smart glasses camera server..."
            android:textSize="14sp"
            android:textColor="@color/instruction_text"
            android:background="@color/instruction_background"
            android:contentDescription="Current instructions"
            android:drawableStart="@drawable/ic_info"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

            <Button
                    android:id="@+id/btnStartRecognition"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="START GLASSES"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_primary"
                    android:textColor="@color/button_text_primary"
                    android:contentDescription="Start smart glasses recognition"
                    android:drawableTop="@drawable/ic_smart_glasses"
                    android:drawablePadding="4dp" />

            <Button
                    android:id="@+id/btnStopRecognition"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="STOP GLASSES"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_secondary"
                    android:textColor="@color/button_text_secondary"
                    android:visibility="gone"
                    android:contentDescription="Stop smart glasses recognition"
                    android:drawableTop="@drawable/ic_stop"
                    android:drawablePadding="4dp" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btnAddFriend"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="ADD FRIEND"
                    android:textSize="12sp"
                    android:background="@drawable/button_accent"
                    android:textColor="@color/button_text_accent"
                    android:contentDescription="Register new face"
                    android:drawableStart="@drawable/ic_person_add"
                    android:drawablePadding="6dp"
                    android:gravity="center" />

            <Button
                    android:id="@+id/btnBack"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="BACK"
                    android:textSize="12sp"
                    android:background="@drawable/button_neutral"
                    android:textColor="@color/button_text_neutral"
                    android:contentDescription="Return to main menu"
                    android:drawableStart="@drawable/ic_arrow_back"
                    android:drawablePadding="6dp"
                    android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/voice_helper_background"
            android:padding="8dp"
            android:gravity="center_vertical">

        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_mic"
                android:contentDescription="Voice commands available" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Voice Commands: 'START', 'STOP', 'ADD FRIEND', 'BACK'"
                android:textSize="10sp"
                android:textColor="@color/voice_helper_text" />

        <ImageView
                android:id="@+id/voiceIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/voice_listening_indicator"
                android:contentDescription="Voice listening indicator"
                android:visibility="gone" />

    </LinearLayout>

</LinearLayout>