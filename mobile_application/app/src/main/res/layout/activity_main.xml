<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/background_primary"
              android:padding="24dp"
              android:gravity="center"
              tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/accent_primary"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/app_name_description"
            android:fontFamily="sans-serif-medium" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:background="@drawable/status_background"
            android:padding="16dp">

        <ImageView
                android:id="@+id/voiceStatusIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_mic_24dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="Voice status indicator" app:tint="@color/accent_secondary"/>

        <TextView
                android:id="@+id/statusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ready_status"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:gravity="start|center_vertical"
                android:fontFamily="sans-serif" />
    </LinearLayout>

    <Button
            android:id="@+id/btnPeopleRecognition"
            style="@style/PrimaryFeatureButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/people_recognition"
            android:drawableTop="@drawable/ic_face_24dp"
            android:contentDescription="@string/people_recognition_desc"
            android:layout_marginBottom="20dp" />

    <Button
            android:id="@+id/btnVoiceCommand"
            style="@style/SecondaryFeatureButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/voice_assistant"
            android:drawableTop="@drawable/ic_mic_24dp"
            android:contentDescription="@string/voice_assistant_desc"
            android:layout_marginBottom="20dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

        <Button
                android:id="@+id/btnNavigation"
                style="@style/SecondaryButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/navigation"
                android:drawableStart="@drawable/ic_navigation_24dp"
                android:contentDescription="@string/navigation_desc"
                android:layout_marginEnd="8dp" />

        <Button
                android:id="@+id/btnSettings"
                style="@style/SecondaryButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/settings"
                android:drawableStart="@drawable/ic_settings_24dp"
                android:contentDescription="@string/settings_desc"
                android:layout_marginStart="8dp" />
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_instructions"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/instruction_background"
            android:contentDescription="@string/main_instructions" />

</LinearLayout>