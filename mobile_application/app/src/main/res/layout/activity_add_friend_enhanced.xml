<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp"
              android:background="@color/background_color"
              tools:context=".AddFriendActivity">

    <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@color/header_background">

        <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp">

            <View
                    android:id="@+id/statusIndicatorBackground"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/status_indicator_background_disconnected"/>

            <ImageView
                    android:id="@+id/statusIndicator"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_visibility_off"
                    android:contentDescription="@string/smart_glasses_status_desc"
                    app:tint="@color/status_disconnected"/>
        </FrameLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/statusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/waiting_for_name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:contentDescription="@string/current_status_desc" />

            <TextView
                    android:id="@+id/statusSubtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smart_glasses_face_registration"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="2dp" />
        </LinearLayout>

        <ImageView
                android:id="@+id/qualityIndicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_quality_unknown"
                android:contentDescription="@string/image_quality_indicator_desc"
                android:visibility="gone"
                app:tint="@color/accent_text" />

        <View
                android:id="@+id/connectionPulse"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/connection_pulse_indicator"
                android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/results_background"
            android:padding="16dp"
            android:layout_margin="8dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/person_registration_title"
                    android:textSize="12sp"
                    android:textColor="@color/accent_text"
                    android:textStyle="bold" />

        </LinearLayout>

        <TextView
                android:id="@+id/nameDisplayText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name_not_set"
                android:textSize="18sp"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:contentDescription="@string/person_name_display_desc"
                android:layout_marginBottom="4dp" />

        <TextView
                android:id="@+id/progressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/photos_quality_default"
                android:textSize="11sp"
                android:textColor="@color/performance_text"
                android:fontFamily="monospace"
                android:visibility="gone" />

    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@color/camera_background">

        <ImageView
                android:id="@+id/liveFeedPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_camera_preview"
                android:scaleType="centerCrop"
                android:contentDescription="@string/live_camera_preview_desc"
                android:background="#f0f0f0" />

        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/smart_glasses_overlay_border" />


        <ProgressBar
                android:id="@+id/captureProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_gravity="bottom"
                android:layout_margin="16dp"
                android:progressTint="@color/accent_text"
                android:progressBackgroundTint="@color/divider_color"
                android:max="5"
                android:progress="0"
                android:visibility="gone" />

        <LinearLayout
                android:id="@+id/qualityFeedbackArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="32dp"
                android:orientation="horizontal"
                android:background="@drawable/overlay_background"
                android:padding="8dp"
                android:gravity="center"
                android:visibility="gone">

            <ImageView
                    android:id="@+id/qualityIcon1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_quality_dot_empty"
                    android:layout_margin="3dp"
                    app:tint="@color/secondary_text" />

            <ImageView
                    android:id="@+id/qualityIcon2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_quality_dot_empty"
                    android:layout_margin="3dp"
                    app:tint="@color/secondary_text" />

            <ImageView
                    android:id="@+id/qualityIcon3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_quality_dot_empty"
                    android:layout_margin="3dp"
                    app:tint="@color/secondary_text" />

            <ImageView
                    android:id="@+id/qualityIcon4"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_quality_dot_empty"
                    android:layout_margin="3dp"
                    app:tint="@color/secondary_text" />

            <ImageView
                    android:id="@+id/qualityIcon5"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_quality_dot_empty"
                    android:layout_margin="3dp"
                    app:tint="@color/secondary_text" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/noPreviewMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="visible">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“·"
                    android:textSize="48sp"
                    android:alpha="0.3" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ready_face_registration"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:textAlignment="center"
                    android:alpha="0.7"
                    android:layout_marginTop="8dp" />

        </LinearLayout>

    </FrameLayout>

    <TextView
            android:id="@+id/instructionsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="12dp"
            android:text="@string/say_person_name_instruction"
            android:textSize="14sp"
            android:textColor="@color/instruction_text"
            android:background="@color/instruction_background"
            android:contentDescription="@string/current_instructions_desc"
            android:drawableStart="@drawable/ic_info"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

            <Button
                    android:id="@+id/btnStartRegistration"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="@string/start_capture_btn"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_primary"
                    android:textColor="@color/button_text_primary"
                    android:contentDescription="@string/start_face_registration_desc"
                    android:drawableTop="@drawable/ic_camera_alt"
                    android:drawablePadding="4dp"
                    android:visibility="gone" />

            <Button
                    android:id="@+id/btnStopRegistration"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="@string/stop_capture_btn"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_secondary"
                    android:textColor="@color/button_text_secondary"
                    android:visibility="gone"
                    android:contentDescription="@string/stop_face_registration_desc"
                    android:drawableTop="@drawable/ic_stop"
                    android:drawablePadding="4dp" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btnStartOver"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="@string/start_over_btn"
                    android:textSize="12sp"
                    android:background="@drawable/button_accent"
                    android:textColor="@color/button_text_accent"
                    android:contentDescription="@string/start_over_desc"
                    android:drawableStart="@drawable/ic_refresh"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:visibility="gone" />

            <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="@string/cancel"
                    android:textSize="12sp"
                    android:background="@drawable/button_neutral"
                    android:textColor="@color/button_text_neutral"
                    android:contentDescription="@string/cancel_desc"
                    android:drawableStart="@drawable/ic_close"
                    android:drawablePadding="6dp"
                    android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/voice_helper_background"
            android:padding="8dp"
            android:gravity="center_vertical">

        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_mic"
                android:contentDescription="@string/voice_commands_available_desc" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/voice_commands_add_friend"
                android:textSize="10sp"
                android:textColor="@color/voice_helper_text" />

        <ImageView
                android:id="@+id/voiceIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/voice_listening_indicator"
                android:contentDescription="@string/voice_listening_indicator_desc"
                android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/connectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/results_background"
            android:padding="8dp"
            android:visibility="gone">

        <ImageView
                android:id="@+id/connectionIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_bluetooth_connected"
                android:layout_marginEnd="6dp"
                android:contentDescription="@string/connection_status_desc"
                app:tint="@color/accent_text" />

        <TextView
                android:id="@+id/connectionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/smart_glasses_connected"
                android:textSize="12sp"
                android:textColor="@color/secondary_text" />

    </LinearLayout>

</LinearLayout>