<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/background_color"
              android:padding="16dp"
              tools:context=".SinhalaOCRActivity">
    
    <!-- Header Section with Status -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@color/header_background">
        
        <ImageView
                android:id="@+id/statusIndicator"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_visibility_off"
                android:contentDescription="@string/smart_glasses_status_desc" />
        
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
            
            <TextView
                    android:id="@+id/statusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/connecting_smart_glasses"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:contentDescription="@string/current_status_desc" />
            
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile_interface_subtitle"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="2dp" />
        
        </LinearLayout>
        
        
        <!-- Processing Indicator -->
        <ProgressBar
                android:id="@+id/processingIndicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="gone"
                style="?android:attr/progressBarStyleSmall" />
    
    </LinearLayout>
    
    <!-- Camera Feed Section -->
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@color/camera_background"
            android:elevation="2dp">
        
        <ImageView
                android:id="@+id/cameraFeedView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/smart_glasses_camera_feed_desc"
                android:background="#f0f0f0"/>
        
        <!-- Overlay for document detection -->
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/smart_glasses_overlay_border"/>
        
        <!-- No Feed Message -->
        <LinearLayout
                android:id="@+id/noFeedMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="visible">
            
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘“"
                    android:textSize="50dp"
                    android:alpha="0.3" android:textColor="#EF5350"/>
            
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connecting_camera_message"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:textAlignment="center"
                    android:alpha="0.7"
                    android:layout_marginTop="8dp"/>
        
        </LinearLayout>
        
    </FrameLayout>
    
    <!-- Results Section -->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="187dp"
            android:layout_margin="8dp"
            android:background="@color/background_color"
            android:padding="12dp"
            android:elevation="2dp">
        
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            
            <!-- Results Header -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Doc_type"
                    android:textSize="14sp"
                    android:textColor="#0091EA"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
            <TextView
                    android:id="@+id/resultsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_processing"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:contentDescription="@string/recognition_results_desc"
                    android:layout_marginBottom="8dp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">
                
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ocr_extracted_text_desc"
                        android:textSize="14sp"
                        android:textColor="#0091EA"
                        android:textStyle="bold"/>
                
                <ImageButton
                        android:id="@+id/speakButton"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_mic"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:enabled="false"
                        app:tint="#1A5F7A"/>
                
                <ImageButton
                        android:id="@+id/pauseButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:visibility="gone"
                        app:tint="@color/accent_primary"/>
            
            </LinearLayout>
            
            <!-- Extracted Text -->
            <TextView
                    android:id="@+id/extractedText"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:text="@string/ocr_result_placeholder"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:contentDescription="@string/extracted_text_desc"
                    android:layout_marginBottom="12dp"
                    android:lineSpacingExtra="2dp"/>
            
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"
                    android:layout_marginVertical="8dp"/>
            
            <!-- Performance Metrics -->
        
        </LinearLayout>
    
    </ScrollView>
    
    <!-- Control Panel -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/header_background"
            android:padding="12dp"
            android:elevation="4dp">
        
        <!-- Voice Status Row -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
            
            <ImageView
                    android:id="@+id/voiceStatusIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_mic"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/voice_status_indicator_desc"
                    app:tint="@color/accent_text" />
            
            <TextView
                    android:id="@+id/voiceStatusText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ready_status"
                    android:textColor="@color/primary_text"
                    android:textSize="13sp" />
            
            <View
                    android:id="@+id/recordingIndicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@color/accent_primary"
                    android:layout_marginStart="8dp" />
        </LinearLayout>
        
        <!-- Control Buttons -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
            
            <Button
                    android:id="@+id/startRecognitionButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/start_reading"
                    android:textStyle="bold"
                    android:background="@drawable/button_primary"
                    android:textColor="@color/button_text_primary"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
            
            <Button
                    android:id="@+id/stopRecognitionButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/stop_reading"
                    android:textStyle="bold"
                    android:background="@drawable/button_secondary"
                    android:textColor="@color/button_text_secondary"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:enabled="false"
                    style="@style/Widget.MaterialComponents.Button" />
        
        </LinearLayout>
    
    </LinearLayout>
    

</LinearLayout>