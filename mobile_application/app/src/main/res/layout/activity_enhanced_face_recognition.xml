<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp"
              android:background="@color/background_color"
              tools:context=".EnhancedFaceRecognitionActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@color/header_background">

        <ImageView
                android:id="@+id/statusIndicator"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_visibility_off"
                android:contentDescription="Connection status indicator" />

        <TextView
                android:id="@+id/statusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Initializing Enhanced Face Recognition..."
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:contentDescription="Current status" />

    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@color/camera_background">

        <SurfaceView
                android:id="@+id/cameraPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Camera preview for face detection" />

        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/camera_overlay_border" />

    </FrameLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@color/results_background"
            android:padding="8dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/resultsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Press start to begin face recognition"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:contentDescription="Recognition results" />

            <TextView
                    android:id="@+id/performanceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="ðŸ“Š Performance metrics will appear here"
                    android:textSize="12sp"
                    android:textColor="@color/performance_text"
                    android:fontFamily="monospace"
                    android:contentDescription="Performance statistics" />

        </LinearLayout>

    </ScrollView>

    <TextView
            android:id="@+id/instructionsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="12dp"
            android:text="Initializing camera and server connection..."
            android:textSize="14sp"
            android:textColor="@color/instruction_text"
            android:background="@color/instruction_background"
            android:contentDescription="Current instructions" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

            <Button
                    android:id="@+id/btnStartRecognition"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="START RECOGNITION"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_primary"
                    android:textColor="@color/button_text_primary"
                    android:contentDescription="Start face recognition" />

            <Button
                    android:id="@+id/btnStopRecognition"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="STOP RECOGNITION"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_secondary"
                    android:textColor="@color/button_text_secondary"
                    android:visibility="gone"
                    android:contentDescription="Stop face recognition" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btnAddFriend"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="ADD FRIEND"
                    android:textSize="12sp"
                    android:background="@drawable/button_accent"
                    android:textColor="@color/button_text_accent"
                    android:contentDescription="Register new face" />

            <Button
                    android:id="@+id/btnBack"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="BACK"
                    android:textSize="12sp"
                    android:background="@drawable/button_neutral"
                    android:textColor="@color/button_text_neutral"
                    android:contentDescription="Return to main menu" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>