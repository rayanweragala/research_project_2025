<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <gradient
                    android:angle="45"
                    android:startColor="@color/radio_selected_gradient_start"
                    android:endColor="@color/radio_selected_gradient_end"
                    android:type="linear" />
            <corners android:radius="8dp" />
            <stroke
                    android:width="2dp"
                    android:color="@color/primary_gradient_start" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                    android:angle="45"
                    android:startColor="#f1f2f6"
                    android:endColor="#ddd"
                    android:type="linear" />
            <corners android:radius="8dp" />
            <stroke
                    android:width="1dp"
                    android:color="@color/primary_gradient_start" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                    android:angle="90"
                    android:startColor="@color/radio_unselected_gradient_start"
                    android:endColor="@color/radio_unselected_gradient_end"
                    android:type="linear" />
            <corners android:radius="8dp" />
            <stroke
                    android:width="1dp"
                    android:color="#dee2e6" />
        </shape>
    </item>
</selector>